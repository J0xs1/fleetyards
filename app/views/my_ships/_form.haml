= form_for user_ship, url: my_ships_path : my_ship_path(user_ship)) do |form|
  = form.hidden_field :ship_id
  .row
    .col-xs-12.col-md-6.form-group{class: form_error?(user_ship, :name)}
      = form.label :name
      = form.text_field :name, class: 'form-control'
      %small
        = form_errors user_ship, :name

  = render "shared/submit", path: ship_path(ship.slug)
