.row{class: ("welcome-box" unless user_signed_in?)}
  .col-md-12
    .jumbotron.text-center
      %h1
        %small
          = I18n.t(:"headlines.base.index")
        &nbsp;
        = I18n.t(:"title.default")
      .row
        .col-xs-12.col-md-offset-3.col-md-6
          = render "ships/search"

      .row
        .col-xs-12.col-md-12
          %p
            = I18n.t(:"texts.base.index").html_safe

.row
  .col-xs-12.col-md-8.col-md-offset-4
    %blockquote.pull-right
      %p
        = I18n.t(:"texts.base.index_quote").html_safe
      %small
        = I18n.t(:"texts.base.index_quote_source").html_safe

- if user_signed_in?
  .row
    .col-xs-12.col-md-6
      %h2
        %a{href: ships_path}
          = I18n.t(:"headlines.ship.updates")
      .list-group
        - @ships.each do |ship|
          %a.list-group-item{href: ship_path(ship.slug)}
            %h4.list-group-item-heading
              = ship.name
            %p.list-group-item-text
              = ship.description
    .col-xs-12.col-md-6
      %h2
        %a{href: images_path}
          = I18n.t(:"headlines.image.updates")
      .row
        - @images.each_with_index do |image, index|
          - if index %2 == 0 && index != 0
            .row.hidden-xs
          .col-xs-12.col-sm-6.col-md-6
            - path = images_path
            - if image.gallery.present?
              - path = gallery_ship_path(image.gallery.slug)
            %a.thumbnail{href: path}
              %img.img-responsive{src: image.name.small, alt: image.name.file.filename}
