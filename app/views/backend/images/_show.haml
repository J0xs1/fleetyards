%tr
  %td
    = image.id
  %td.preview.text-center
    = image_tag image.name.small
  %td
    = image.name.file.filename
  %td
    - unless image.gallery.blank?
      %a{href: send("gallery_#{image.gallery.class.name.downcase}_path", image.gallery.slug), target: '_blank'}
        = image.gallery.name
  %td
    .btn-group
      %button.btn.btn-default.btn-sm{class: ('active' if image.enabled?), type: "button", onclick: "App.Resources.stateChange($(this)); return false;", data: {action: toggle_backend_image_path(image), resource: 'image', toggle: "button"}}
        %i.glyphicon{class: "glyphicon-#{(image.enabled? ? 'check' : 'unchecked')}"}
      -# = link_to edit_backend_image_path(image), title: I18n.t(:"actions.edit"), class: "btn btn-default btn-sm" do
      -#   %i.glyphicon.glyphicon-edit
      = confirm_link_to backend_image_path(image), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger btn-sm" do
        %i.glyphicon.glyphicon-trash
