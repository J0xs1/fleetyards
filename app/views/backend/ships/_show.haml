%tr
  %td
    = ship.id
  %td
    = ship.name
  %td
    .btn-group
      = link_to gallery_backend_ship_path(ship.slug), title: I18n.t(:"actions.ship.gallery"), class: "btn btn-default btn-sm" do
        %i.glyphicon.glyphicon-picture
      = link_to edit_backend_ship_path(ship.slug), title: I18n.t(:"actions.edit"), class: "btn btn-default btn-sm" do
        %i.glyphicon.glyphicon-edit
      = confirm_link_to backend_ship_path(ship.slug), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger btn-sm" do
        %i.glyphicon.glyphicon-trash
