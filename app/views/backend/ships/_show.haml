%tr
  %td
    = ship.id
  %td
    = ship.name
  %td
    .btn-group
      %button.btn.btn-default.btn-sm{class: ('active' if ship.enabled?), type: "button", onclick: "App.Resources.stateChange($(this)); return false;", data: {action: toggle_backend_ship_path(ship), resource: 'ship', toggle: "button"}}
        %i.fa{class: "fa-#{(ship.enabled? ? 'check' : 'unchecked')}"}
      = link_to gallery_backend_ship_path(ship), title: I18n.t(:"actions.ship.gallery"), class: "btn btn-default btn-sm" do
        %i.fa.fa-image
      = link_to edit_backend_ship_path(ship), title: I18n.t(:"actions.edit"), class: "btn btn-default btn-sm" do
        %i.fa.fa-edit
      = confirm_link_to backend_ship_path(ship), data: {notyConfirm: I18n.t(:"messages.confirm.delete")}, title: I18n.t(:"actions.delete"), method: :delete, class: "btn btn-danger btn-sm" do
        %i.fa.fa-trash
