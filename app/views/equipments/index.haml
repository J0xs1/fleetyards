- content_for :title do
  = I18n.t(:"title.equipment.index")
.row#equipment
  .col-xs-12.col-md-12

    .row
      .col-xs-12.col-md-8
        %h1
          = I18n.t(:"headlines.equipment.index")

    .row
      .col-xs-12.col-md-6
      .col-xs-12.col-md-6
        .pull-right
          = paginate @equipment

    .row
      - @equipment.each_with_index do |equipment, key|
        - if key %3 == 0 && key != 0
          .row.visible-md
          .row.visible-lg
        - if key %2 == 0 && key != 0
          .row.visible-sm
        .col-md-4.col-sm-6.col-xs-12
          = render "show", equipment: equipment

    .row
      .col-xs-12.col-md-12
        .pull-right
          = paginate @equipment

