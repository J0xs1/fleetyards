.row
  - Equipment::VALID_TYPES.each_with_index do |type, key|
    - if key %3 == 0 && key != 0
      .row
    .col-md-4.col-sm-6.col-xs-12
      %h3
        = I18n.t(:"activerecord.attributes.equipment.types.#{type}")
      %ul
        - Equipment.where(equipment_type: type).all.each do |equipment|
          %li
            = equipment.name
