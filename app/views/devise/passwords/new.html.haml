- content_for :title do
  = I18n.t(:"title.password.new")
.row
  .col-xs-12
    .cbox.cbox-password
      .well
        %h2= I18n.t(:"headlines.forgot_password")

        = form_for(resource, as: resource_name, url: user_password_path, html: { method: :post}) do |form|

          .form-group{class: form_error?(resource, :email)}
            = form.text_field :email, placeholder: I18n.t(:"helpers.placeholder.user.email"), class: 'form-control'
            %small
              = form_errors resource, :email

          .text-right

            %button.hidden-xs.btn.btn-lg.btn-primary{data: {loading: {text: I18n.t(:"actions.loading")}}}
              = I18n.t(:"actions.reset_password")
            %button.visible-xs.btn-block.btn.btn-lg.btn-primary{data: {loading: {text: I18n.t(:"actions.loading")}}}
              = I18n.t(:"actions.reset_password")
