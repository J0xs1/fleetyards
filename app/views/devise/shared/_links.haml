.panel.panel-default
  .panel-heading
    .panel-title
      %strong
        = I18n.t(:"labels.actions")
  .list-group
    - if !%w(sessions).include?(controller_name)
      = link_to I18n.t(:"actions.sign_in"), new_session_path(resource_name), class: "list-group-item"
    - if !%w(passwords registrations).include?(controller_name)
      = link_to I18n.t(:"actions.forgot_password"), new_password_path(resource_name), class: "list-group-item"
    - if !%w(confirmations registrations).include?(controller_name)
      = link_to I18n.t(:"actions.confirm"), new_confirmation_path(resource_name), class: "list-group-item"
    - if !%w(unlocks registrations).include?(controller_name)
      = link_to I18n.t(:"actions.unlock"), new_unlock_path(resource_name), class: "list-group-item"
