- content_for :title do
  = I18n.t(:"title.component.#{components_type}.index")
.row#components
  .col-xs-12.col-md-12

    .row
      .col-xs-12.col-md-8
        %h1
          = I18n.t(:"headlines.component.#{components_type}.index")

    .row
      .col-xs-12.col-md-6
      .col-xs-12.col-md-6
        .pull-right
          = paginate components

    .row
      - components.each_with_index do |component, key|
        - if key %3 == 0 && key != 0
          .row.visible-md
          .row.visible-lg
        - if key %2 == 0 && key != 0
          .row.visible-sm
        .col-md-4.col-sm-6.col-xs-12
          = render "show", component: component

    .row
      .col-xs-12.col-md-12
        .pull-right
          = paginate components
