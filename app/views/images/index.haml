- content_for :title do
  = I18n.t(:"title.image.index")
.row#images
  .col-xs-12.col-md-12

    .row
      .col-xs-12.col-md-8
        %h2
          = I18n.t(:"headlines.image.index")

    .row
      .col-xs-12.col-md-6
      .col-xs-12.col-md-6
        .pull-right
          = paginate @images

    .row
      - @images.each_with_index do |image, index|
        - if index %4 == 0 && index != 0
          .row.visible-lg
          .row.visible-md
          .row.visible-sm
        .col-md-3.col-sm-3.col-xs-12
          %a.thumbnail{href: image.name, title: image.name.file.filename, data: {gallery: true}}
            %img.img-responsive{src: image.name.small, alt: image.name.file.filename}

    .row
      .col-xs-12.col-md-12
        .pull-right
          = paginate @images

= render "shared/gallery_modal"
