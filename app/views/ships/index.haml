- content_for :title do
  = I18n.t(:"title.ship.index")
.row#ships
  .col-xs-12.col-md-12

    .row
      .col-xs-12.col-md-8
        %h2
          = I18n.t(:"headlines.ship.index")

      .col-xs-12.col-md-4
        = render "search"
        .btn-group.pull-right.resource-nav
          - if can? :reload, :ships
            %button.reload-ships.btn.btn-primary.ladda-button{data: {style: "expand-right", action: reload_ships_path}, class: ('loading' if @worker && @worker.running), onclick: "App.Ships.reload($(this)); return false;"}
              = I18n.t(:"actions.ship.reload")

    .row
      .col-xs-12.col-md-6
        = render "shared/filter", resource: "ship", name: "ship_role", filters: ShipRole.all, translateable: true
        = render "shared/filter", resource: "ship", name: "manufacturer", filters: Manufacturer.all
      .col-xs-12.col-md-6
        .pull-right
          = paginate @ships

    .row
      = render partial: "ships/show", collection: @ships, as: :ship
      - if @ships.blank?
        .col-md-12
          .well.text-center
            = I18n.t(:"labels.table.blank.ship")
    .row
      .col-xs-12.col-md-12
        .pull-right
          = paginate @ships
