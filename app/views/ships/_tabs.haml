.row.tab-pane{class: ("active" if category_counter.zero?), id: category.slug}
  .col-xs-12.col-md-12
    %br
    .row
      - items = ship.send("#{category.slug}_hardpoints")
      - items.each do |hardpoint|
        .col-xs-12.col-sm-6.col-md-6
          = render "ships/hardpoint", hardpoint: hardpoint
      - if items.blank?
        .col-xs-12.col-sm-12.col-md-12
          .list-group
            .list-group-item
              = I18n.t(:"labels.blank.#{category.slug}")
